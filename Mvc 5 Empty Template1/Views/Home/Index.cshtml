@model  Mvc_5_Empty_Template1.Models.order
@using JQueryUIHelpers;
@{

    ViewBag.Title = "Order Page";

}


@section featured
{
    <section class="featured">
        <form method="post">
            <div class="content-wrapper">
                <hgroup class="title">
                    <h1>@ViewBag.Message.</h1>
                </hgroup>
                <table>
                    <tr>
                        <td><p>First Name</p></td>
                        <td>
                            @*<textarea name="firstName"></textarea>*@
                            @Html.TextBoxFor(model => model.firstName, new { @class = "form-control", required = "required"})
                        </td>
                    </tr>
                    <tr>
                        <td><p>Last Name</p></td>
                        <td>@Html.TextBoxFor(model => model.lastName, new { @class = "form-control", required = "required" })</td>
                    </tr>
                    <tr>
                        <td><p>Send confirmation email to:</p></td>
                        <td>@Html.TextBoxFor(model => model.userEmail, new { @class = "form-control", required = "required" })</td>
                    </tr>
                    <tr>
                        <td><p>Phone Number:</p></td>
                        <td>@Html.TextBoxFor(model => model.phone, new { @class = "form-control", required = "required" })</td>
                    </tr>
                    <tr>
                        <td><p>Delivery Date:</p></td>
                        <td>
                            <div class="form-group">
                                @Html.JQueryUI().DatepickerFor(model => model.deliveredDate, new { @class = "form-control", required = "required" })

                            </div>
                            @*@Html.TextBoxFor(model => model.deliveredDate)*@
                        </td>
                    </tr>
                    <tr>
                        <td><p>Count Of Pizzas:</p></td>
                        <td>@Html.TextBoxFor(model => model.countPZ, new { @class = "form-control", required = "required" })</td>
                    </tr>
                    <tr>
                        <td colspan="2"><input id="Button1" type="submit" value="Send Request" /></td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </form>
    </section>
}

